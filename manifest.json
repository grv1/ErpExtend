{
	"manifest_version": 2,
	"name": "ERP Extend",
	"version": "1.0",
	"description": "An extension to simplify things on ERP BITS Goa!",
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://sis.erp.bits-pilani.ac.in/*"],
			"js": ["content.js"]
		}
	],
	"permissions": ["tabs", "storage", "https://sis.erp.bits-pilani.ac.in/*"]
}
