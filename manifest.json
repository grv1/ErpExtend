{
	"manifest_version": 2,
	"name": "ERP Extend",
	"version": "1.0",
	"description": "An extension to simplify things on ERP BITS Goa!",
	"browser_action": {
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"permissions": [
		"tabs",
		"storage",
		"notifications",
		"https://sis.erp.bits-pilani.ac.in/*"
	]
}
